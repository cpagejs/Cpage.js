{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es5",
    "lib": [
      "es5",
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "es2020",
      "scripthost"
    ],
    "removeComments": false,
    "experimentalDecorators": true,
    "emitBOM": true,
    "alwaysStrict": true,
    "downlevelIteration": true
  },
  "include": ["packages/**/*", "tsconfig.types.json"],
  "exclude": ["node_modules", "docs"]
}
