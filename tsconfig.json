{
    "compilerOptions": {
        "outDir": "./built",
        "allowJs": true,
        "target": "es5",
        "lib":["es5", "dom", "dom.iterable", "es2015", "es2016", "es2017", "scripthost"],
        "suppressExcessPropertyErrors": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "emitBOM": true,
        "alwaysStrict": true,
		"downlevelIteration": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "docs"
    ]
}